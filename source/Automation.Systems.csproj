<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <IsAotCompatible>True</IsAotCompatible>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <WarningLevel>8</WarningLevel>
    <Title>Automation Systems</Title>
    <Authors>popcron</Authors>
    <Company>simulation-tree</Company>
    <RepositoryUrl>https://github.com/simulation-tree/automation-systems</RepositoryUrl>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\automations\source\Automations.csproj"/>
    <ProjectReference Include="..\..\simulation\core\Simulation.Core.csproj"/>
    <ProjectReference Include="..\..\simulation\generator\Simulation.Generator.csproj">
      <OutputItemType>Analyzer</OutputItemType>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
    <ProjectReference Include="..\..\types\generator\Types.Generator.csproj">
      <OutputItemType>Analyzer</OutputItemType>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
    <ProjectReference Include="..\..\worlds\generator\Worlds.Generator.csproj">
      <OutputItemType>Analyzer</OutputItemType>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Content Include="bin/Debug/net9.0/Automation.Systems.dll" Pack="true" PackagePath="tools/debug/Automation.Systems.dll" Visible="false"/>
    <Content Include="bin/Debug/net9.0/Automation.Systems.xml" Pack="true" PackagePath="tools/debug/Automation.Systems.xml" Visible="false" Condition="Exists('bin/Debug/net9.0/Automation.Systems.xml')"/>
    <Content Include="bin/Release/net9.0/Automation.Systems.dll" Pack="true" PackagePath="tools/release/Automation.Systems.dll" Visible="false"/>
    <Content Include="bin/Release/net9.0/Automation.Systems.xml" Pack="true" PackagePath="tools/release/Automation.Systems.xml" Visible="false" Condition="Exists('bin/Release/net9.0/Automation.Systems.xml')"/>
    <Content Include="build/Automation.Systems.targets" Pack="true" PackagePath="build/Automation.Systems.targets" Visible="false"/>
  </ItemGroup>

</Project>